<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/primaryLight"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgStart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvItemMenu"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_calendar"
                app:tint = "@color/accent"
                android:layout_marginHorizontal="10dp" />

            <TextView
                android:id="@+id/tvItemMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imgStart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgEnd"
                android:textColor="@color/accent"
                android:padding="10dp"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/imgEnd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintStart_toEndOf="@+id/tvItemMenu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_arrow_forward"
                android:layout_marginHorizontal="10dp"
                app:tint="@color/accent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>